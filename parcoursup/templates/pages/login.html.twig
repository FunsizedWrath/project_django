{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block content %}
    <form method="post" action="{{ app_path }}">{% csrf_token %}
        {% if error %}
            {# <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div> #}
        {% endif %}

        {% if  user.is_authenticated %}
            <div class="alert alert-info mb-3">
                You are logged in as {{  user.is_authenticated }}, <a href="">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="username">Username</label>
        <input type="username" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
        <label for="password">Password</label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               {# value="{{ csrf_token('authenticate') }}" #}
        >

        <button class="btn btn-lg btn-primary mt-3" type="submit">
            Sign in
        </button>
    </form>
{% endblock %}